<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/dialog_bg"
        android:scaleType="fitXY"
        android:layout_marginTop="119dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/end"
        android:src="@drawable/fc_charge_dialog_bg"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/dialog_title"
        android:src="@drawable/fc_first_charge_dialog_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_close"
        android:src="@drawable/close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_bg"
        android:layout_marginTop="7dp"
        android:layout_width="35dp"
        android:layout_height="35dp"/>

    <TextView
        android:id="@+id/tv_desc"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="@id/dialog_bg"
        app:layout_constraintRight_toRightOf="@id/dialog_bg"
        app:layout_constraintTop_toBottomOf="@id/dialog_title"
        android:text="各位英雄豪杰走过路过别错过"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <include
        app:layout_constraintLeft_toLeftOf="@id/dialog_bg"
        app:layout_constraintRight_toRightOf="@id/dialog_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/fc_layout_container"/>

    <TextView
        android:id="@+id/tv_old_price"
        android:textColor="#FFF"
        android:textSize="10sp"
        android:text="原价38元"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@id/container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_new_price"
        android:textColor="#FFEA00"
        android:textSize="12sp"
        android:text="现仅需支付 1 元"
        app:layout_constraintTop_toBottomOf="@id/tv_old_price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/btn_get_gift"
        android:src="@drawable/fc_get_gift_btn_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_new_price"
        android:layout_marginTop="11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/end"
        app:layout_constraintTop_toBottomOf="@id/btn_get_gift"
        android:layout_width="wrap_content"
        android:layout_height="23dp"/>

</android.support.constraint.ConstraintLayout>