<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/dialog_bg"
        android:layout_marginTop="119dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/end"
        android:src="@drawable/fc_charge_dialog_bg"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/dialog_title"
        android:src="@drawable/fc_get_charge_gift_success_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_close"
        android:src="@drawable/close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_bg"
        android:layout_marginTop="7dp"
        android:layout_width="35dp"
        android:layout_height="35dp"/>

    <TextView
        android:id="@+id/tv_desc"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="@id/dialog_bg"
        app:layout_constraintRight_toRightOf="@id/dialog_bg"
        app:layout_constraintTop_toBottomOf="@id/dialog_title"
        android:text="@string/fc_get_gift_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <include
        app:layout_constraintLeft_toLeftOf="@id/dialog_bg"
        app:layout_constraintRight_toRightOf="@id/dialog_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/fc_layout_container"/>

    <TextView
        android:id="@+id/tv_tips"
        android:textColor="#FFF"
        android:textSize="10sp"
        android:text="@string/fc_get_gift_success_tips"
        app:layout_constraintTop_toBottomOf="@id/container"
        app:layout_constraintLeft_toLeftOf="@id/dialog_bg"
        app:layout_constraintRight_toRightOf="@id/dialog_bg"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="29dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/end"
        app:layout_constraintTop_toBottomOf="@id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="43dp"/>
</android.support.constraint.ConstraintLayout>