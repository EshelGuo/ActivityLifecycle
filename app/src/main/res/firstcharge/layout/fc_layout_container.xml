<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    app:layout_constraintLeft_toLeftOf="@id/dialog_bg"
    app:layout_constraintRight_toRightOf="@id/dialog_bg"
    app:layout_constraintTop_toBottomOf="@id/tv_desc"
    app:layout_constraintBottom_toTopOf="@id/tv_old_price"
    android:paddingTop="18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_item_1"
        android:layout_marginLeft="23dp"
        style="@style/GiftIvItemStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_item_1"
        android:text="ffffffffffff"
        app:layout_constraintTop_toBottomOf="@id/iv_item_1"
        app:layout_constraintLeft_toLeftOf="@id/iv_item_1"
        app:layout_constraintRight_toRightOf="@id/iv_item_1"
        style="@style/GiftTvItemStyle"/>

    <ImageView
        android:id="@+id/iv_item_2"
        style="@style/GiftIvItemStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_item_2"
        android:text="ffffffffffff"
        app:layout_constraintTop_toBottomOf="@id/iv_item_2"
        app:layout_constraintLeft_toLeftOf="@id/iv_item_2"
        app:layout_constraintRight_toRightOf="@id/iv_item_2"
        style="@style/GiftTvItemStyle"/>

    <ImageView
        android:id="@+id/iv_item_3"
        android:layout_marginRight="23dp"
        style="@style/GiftIvItemStyle"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_item_3"
        android:text="ffffffffffff"
        app:layout_constraintTop_toBottomOf="@id/iv_item_3"
        app:layout_constraintLeft_toLeftOf="@id/iv_item_3"
        app:layout_constraintRight_toRightOf="@id/iv_item_3"
        style="@style/GiftTvItemStyle"/>

    <ImageView
        android:id="@+id/iv_item_4"
        android:layout_marginLeft="23dp"
        style="@style/GiftIvItemStyle"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_item_1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/tv_item_4"
        android:text="ffffffffffff"
        app:layout_constraintTop_toBottomOf="@id/iv_item_4"
        app:layout_constraintLeft_toLeftOf="@id/iv_item_4"
        app:layout_constraintRight_toRightOf="@id/iv_item_4"
        style="@style/GiftTvItemStyle"/>

    <ImageView
        android:id="@+id/iv_item_5"
        style="@style/GiftIvItemStyle"
        android:visibility="visible"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_item_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_item_5"
        android:text="ffffffffffff"
        app:layout_constraintTop_toBottomOf="@id/iv_item_5"
        app:layout_constraintLeft_toLeftOf="@id/iv_item_5"
        app:layout_constraintRight_toRightOf="@id/iv_item_5"
        style="@style/GiftTvItemStyle"/>

    <ImageView
        android:id="@+id/iv_item_6"
        android:layout_marginRight="23dp"
        style="@style/GiftIvItemStyle"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_item_3"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/tv_item_6"
        android:text="ffffffffffff"
        app:layout_constraintTop_toBottomOf="@id/iv_item_6"
        app:layout_constraintLeft_toLeftOf="@id/iv_item_6"
        app:layout_constraintRight_toRightOf="@id/iv_item_6"
        style="@style/GiftTvItemStyle"/>
</android.support.constraint.ConstraintLayout>